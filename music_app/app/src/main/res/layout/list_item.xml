<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/list_text_view_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_title"
        android:text="@string/failed_to_load_title"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/list_text_view_margin_left"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_medium" />


    <TextView
        android:id="@+id/song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/song_title"
        android:layout_marginTop="@dimen/list_text_view_margin_top"
        android:text="@string/failed_to_load_author"
        android:layout_marginLeft="@dimen/list_text_view_margin_left"
        android:layout_marginBottom="@dimen/list_text_view_margin_bottom"
        android:textColor="@color/color_text" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_play_circle_outline_white_24dp"/>

</RelativeLayout>