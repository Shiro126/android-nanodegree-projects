<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".PlaylistActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="@string/failed_to_load_title"
            android:textAlignment="center"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playlist_title"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/number_of_songs"
            android:text="@string/songs"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_medium"
            />

        <TextView
            android:id="@+id/number_of_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/playlist_title"
            android:layout_below="@id/playlist_title"
            android:layout_marginLeft="142dp"
            android:text="0"
            android:textColor="@color/color_text"
            android:textSize="@dimen/text_medium"
            />


    </RelativeLayout>
    <ListView
        android:id="@+id/song_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>